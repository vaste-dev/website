---
import { Icon } from 'free-astro-components'

interface Props {
  type: 'primary' | 'secondary' | 'light'
  icon?: string
  title?: string
  description?: string
}

const { icon, title, description } = Astro.props

const cardClasses = [
  'flex flex-col gap-8 h-full bg-gradient-to-r from-primary/10 to-secondary/10 rounded-3xl p-8',
]
  .filter(Boolean)
  .join(' ')

const iconClasses = ['w-20 h-20 text-primary'].filter(Boolean).join(' ')
---

<article class={cardClasses}>
  <div>
    <Icon icon={icon} class={iconClasses} />
  </div>
  <div class="flex flex-col gap-4">
    <h3 class="text-neutral-700 text-2xl lg:text-3xl">{title}</h3>
    <p class="flex-1 text-neutral-500">{description}</p>
  </div>
</article>
